/* 分类 */

.category {
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
}

.category .item {
    width: 100%;
}

.category .item .wrap {
    float: left;
    width: 20%;
}

.category .wrap image {
    background-color: #f2f2f2;
    display: block;
    width: 100%;
    margin: 0 auto;
}

/* 分类end */

