/* 商品活动区域end */

/* 商品 */

.product {
    width: 100%;
    /* padding-left:14rpx; */
    background-color: #fff;
    box-sizing: border-box;
    margin-bottom:10px;
}
.pro_img{
    width: 100%;
}
.pro_img image {
    background-color: #f2f2f2;
    display: block;
    width: 100%;
}
.product .product_box {
    display: inline-block;
    background-color: #F6F6F6;
    width: 50%;
    padding-right:14rpx;
    box-sizing: border-box;
}
.product .product_box .imgBox{
    width:100%;
}
.product .product_box .imgBox image {
    background-color: #f2f2f2;
    display: block;
    width: 100%;
}
.product .product_box .textBox{
    padding:18rpx 32rpx;
    box-sizing: border-box;
}
.product .product_box .textBox  text {
    display: block;
    text-align: center;
}

.product .product_box .title {
    font-size: 37rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: rgba(0,0,0,.87);
}

.product .product_box .introduce {
    font-size: 30rpx;
    color: #929292;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    line-height: 60rpx;
}

.product .product_box .price {
    font-size: 32rpx;
    color: #ea625b;
    line-height: 46rpx;
}
.product .product_box .buybtn{
    margin: 0 auto;
    width: 234rpx;
    background: #ea625b;
    border-radius: 6rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    padding: 18rpx 0;
    font-weight: 700;
}
.product .chanpin{
    display: block;
    text-align: center;
    border-top:1px solid #D7D7D7;
    width:100%;
    height:50px;
    line-height: 50px;
    color: rgba(0,0,0,.6);
    font-size:14px;
}
