/* pages/categories/categories.wxss */
page,.cat{
    height: 100vh;
}
.cat{
    display: flex;
    flex-direction: row;
    height: 100%;
    width: 100%;
    background: #fff;
}
.category-left{
    display: flex;
    flex-direction: column;
    width: 210rpx;
    border-right: 2.34rpx solid #dcdcdc;
    text-align: center;
}
.cate-name{
    display: inline-block;
    /* margin-top: 40rpx; */
    height:105.3rpx;
    line-height: 105.3rpx;
    font-size: 32.76rpx;
}
.cate-name.on{
    font-size: 37.44rpx;
    color:  #ff4a00;
}



.category-right{
    padding:0 37.44rpx;
    display: flex;
    flex-direction: column;
}
.cate-content{
    margin-top: 40rpx;
}
.cate-list-content{
    margin-top: 40rpx;
}
.cate-content .header{
    line-height: 149.76rpx;
    font-size: 32.76rpx;
    text-align: center;
    font-weight: 400;
}
.cate-content .header text{
      position:relative;
}
.cate-content .header text::before,.cate-content .header text::after{
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 46.8rpx;
    border-top: 2.34rpx solid #e0e0e0;
    transform: translate3d(-150%,-50%,0);
    -webkit-transform: translate3d(-150%,-50%,0)
}
.cate-content .header text::after{
    left: auto;
    right: 0;
    transform: translate3d(150%,-50%,0);
    -webkit-transform: translate3d(150%,-50%,0)
}
.cate-list{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.cate-list .cate-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width:33%;
    margin-top: 23.4rpx;
    margin-bottom: 35.1rpx;
}
.cate-item image{
    background-color: #f2f2f2;
    max-height:210.6rpx;
    display: inline-block;
    width: 117rpx;
}
.cate-item text{
    display: inline-block;
    width:100%;
    text-align: center;
    font-size: 26.91rpx;
    color: rgba(0,0,0,.54);
    margin-top: 32.76rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.banner{
    min-height: 234rpx;
    background-color: #f2f2f2;
    width: 100%;
    margin: 0 auto;
}
.banner image{
    width: 100%;
    height: 100%;
}
