/* pages/spdetail/spdetail.wxss */

.swiper_image {
    width: 100%;
}

auto-img {
    width: 100%;
}

.blank_line {
    height: 102.96rpx;
    background: rgb(255, 255, 255);
}

.xiang {
    margin-bottom: 112rpx;
    background-color: #fff;
}

/* 秒杀价 */

.miaosha {
    width: 100%;
    background-color: #f56600;
    padding: 0 37.44rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 37.44rpx;
    line-height: 112.32rpx;
    -webkit-box-pack: justify;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.miaosha .miao_l {
    font-weight: 550;
    min-width: 117rpx;
}

.miaosha .miao_r {
    font-size: 28.08rpx;
}

/* 秒杀价end */

/* 标题信息 */

.protitle {
    width: 100%;
    background-color: #fff;
    padding: 16px 16px 0;
    box-sizing: border-box;
    margin-bottom: 2rpx;
}

.protitle .toptitle {
    width: 100%;
}

.protitle .toptitle .title {
    font-size: 48.58rpx;
    line-height: 30px;
    color: #3c3c3c;
}

.goods_affect {
    width: 100%;
}

.goods_affect .goods_message {
    font-size: 28rpx;
    line-height: 42rpx;
    color: rgba(0, 0, 0, 0.54);
}

.goods_affect .goods_message text {
    color: #ff4a00;
    font-size: 28.08rpx;
}

.protitle .price {
    width: 100%;
    height: 84rpx;
    line-height: 84rpx;
    background-color: #fff;
}

.protitle .price .nowprice {
    font-size: 56.16rpx;
    color: #ff6700;
}

.protitle .price .delprice {
    margin-left: 28.08rpx;
    font-size: 28.08rpx;
    color: #535353;
    text-decoration: line-through;
}

/* 头部信息 */

/* 横向滑动 */

.hor {
    display: flex;
    flex-direction: row;
    width: auto;
    padding: 0 0 18.72rpx;
}

.hor_box {
    min-width: 196.56rpx;
    padding: 9.36rpx;
    text-align: center;
    border-right: 2.34rpx solid #f2f2f2;
}

.hor image {
    display: block;
    width: 20px;
    margin: 0 auto;
}

.hor .text {
    color: #676767;
    font-size: 28.08rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 横向滑动end */

/* 选择 */

.xuanze {
    width: 100%;
}

.xuanze .xuanze_box {
    margin: 18.72rpx 37.44rpx 0;
    padding: 18.72rpx 37.44rpx;
    border-radius: 18.72rpx;
    font-size: 28.08rpx;
    height: 46.8rpx;
    line-height: 46.8rpx;
    background-color: #FAFAFA;
    -webkit-box-pack: justify;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.xuanze .xuanze_box image {
    width: 23.4rpx;
}

.xuanze .xuanze_box .xuanze_box_r {
    width: 23.4rpx;
    height: 23.4rpx;
    margin-top: 23.4rpx;
    border-left: 1px solid currentColor;
    border-top: 1px solid currentColor;
    transform: translate3d(0, -50%, 0) rotate(135deg);
    -webkit-transform: translate3d(0, -50%, 0) rotate(135deg);
}

/* 选择end */

/* 详细介绍 */

.xiangxi {
    width: 100%;
}

.xiangxi image {
    display: block;
    width: 100%;
}

/* 详细介绍end */

/* 底部栏 */

.goods_footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #ccc;
    height: 112rpx;
    border-top: 2rpx solid #e5e5e5;
}

.goods_footer view.btn {
    width: 25%;
    height: 100%;
    float: left;
    line-height: 112rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
}

.goods_footer .bt1 {
    background-color: #fff;
    line-height: 112rpx;
}

.goods_footer .bt1 .goods_car {
    display: inline-block;
    width: 56rpx;
    height: 56rpx;
    vertical-align: middle;
    margin: 0 auto;
    position: relative;
}

.goods_footer .bt1 .goods_car image {
    display: block;
    width: 56rpx;
    height: 56rpx;
}

.goods_footer .bt1 .goods_car .goods_num {
    position: absolute;
    right: -16rpx;
    top: -16rpx;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    background-color: #fa0a0a;
    font-size: 23rpx;
    color: #fff;
    text-align: center;
    line-height: 32rpx;
}

.goods_footer .bt2 {
    background-color: #ffa500;
}

.goods_footer .bt3 {
    background-color: #00aaef;
}

.goods_footer .bt4 {
    background-color: #69c3aa;
}

/* 底部栏end */
