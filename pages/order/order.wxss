/* pages/order/order.wxss */

.order {
    background-color: #f5f5f5;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.card {
    width: 90%;
    margin: 15px auto;
    background-color: #fff;
    /* height: 200px; */
    border-radius: 10px;
    font-size: 14px;
}

.card .title {
    -webkit-box-pack: justify;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #3c3c3c;
    padding: 5px 10px;
}
.card .title .title_l{
    text-align: left;
}
.card .title .title_r{
    text-align: right;
}
.card .content {
    -webkit-box-pack: justify;
    display: flex;
    flex-direction: row;
}

.card .content .content1 {
    flex: 2;
}

.card .content .content1 image {
    display: block;
    width: 90%;
    margin: 0 auto;
}

.card .content .content2 {
    flex: 4;
    padding: 0 8px;
    font-size: 14px;
    color: #3c3c3c;
}

.card .content .content3 {
    flex: 1;
    text-align: right;
    padding-right:10px;
    font-size: 14px;
    color: #3c3c3c;
}
.pad{
    text-align: right;
    padding:0 10px 10px;
}
.yunfeixian text{
    color:#ccc;
}
.pro_price text{
    font-size: 16px;
}